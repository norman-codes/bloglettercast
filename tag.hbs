{{!< default}}

<main class="gh-main gh-outer">
    {{#tag}}
        <div class="centered-container">
            <section class="gh-taghead">
                <h1 class="gh-tag-title">{{name}}</h1>

                {{#if description}}
                    <div class="gh-tag-description">{{description}}</div>
                {{/if}}
            </section>
        </div>
    {{/tag}}

    <div class="gh-inner">
        <div class="gh-topic gh-topic-grid">
            <div class="gh-topic-content gh-feed">
                {{#foreach posts limit="all"}}
                    {{> "loop-grid"}}
                {{/foreach}}
            </div>
        </div>
    </div>
</main>